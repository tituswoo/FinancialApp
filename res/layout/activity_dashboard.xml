<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DashboardActivity" >

    <Button
        android:id="@+id/view_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_account"
        android:layout_below="@+id/new_account"
        android:onClick="onBtnClick"
        android:text="View Existing Accounts" />

    <Button
        android:id="@+id/new_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentUser"
        android:layout_centerHorizontal="true"
        android:onClick="onBtnClick"
        android:text="Create New Account" />

    <TextView
        android:id="@+id/currentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_account"
        android:layout_alignParentTop="true"
        android:text="Logged in as"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/cashFlowReportActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_accounts"
        android:layout_alignRight="@+id/view_accounts"
        android:layout_below="@+id/view_accounts"
        android:onClick="onBtnClick"
        android:text="Cash Flow Report" />

    <Button
        android:id="@+id/spendingCategoryReportActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cashFlowReportActivity"
        android:layout_alignRight="@+id/cashFlowReportActivity"
        android:layout_below="@+id/cashFlowReportActivity"
        android:onClick="onBtnClick"
        android:text="Spending Category Report" />

    <Button
        android:id="@+id/dashboard_Button_incomeSourceReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spendingCategoryReportActivity"
        android:layout_alignRight="@+id/spendingCategoryReportActivity"
        android:layout_below="@+id/spendingCategoryReportActivity"
        android:onClick="onBtnClick"
        android:text="Income Source Report" />

    <Button
        android:id="@+id/dashboard_Button_viewAccountBalances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dashboard_Button_incomeSourceReport"
        android:layout_alignRight="@+id/dashboard_Button_incomeSourceReport"
        android:layout_below="@+id/dashboard_Button_incomeSourceReport"
        android:onClick="onBtnClick"
        android:text="View Account Balances" />

</RelativeLayout>
